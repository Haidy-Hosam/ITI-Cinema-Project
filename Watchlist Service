import { Injectable } from '@angular/core';

export interface Movie {
  title: string;
  year: number;
  rating: number;
  description: string;
  poster: string;
}

@Injectable({
  providedIn: 'root'
})
export class WatchlistService {

  private movies: Movie[] = [
    {
      title: 'Black Widow',
      year: 2020,
      rating: 4,
      description: 'Natasha Romanoff, also known as Black Widow...',
      poster: 'assets/black-widow.jpg'
    },
    {
      title: 'Black Widow',
      year: 2020,
      rating: 4,
      description: 'Natasha Romanoff, also known as Black Widow...',
      poster: 'assets/black-widow.jpg'
    }
  ];

  getMovies(): Movie[] {
    return this.movies;
  }

  addMovie(movie: Movie) {
    this.movies.push(movie);
  }

  removeMovie(index: number) {
    this.movies.splice(index, 1);
  }

  clearMovies() {
    this.movies = [];
  }

  isEmpty(): boolean {
    return this.movies.length === 0;
  }
}
